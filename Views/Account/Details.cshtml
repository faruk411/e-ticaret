@model e_ticaret_MVC.Models.OrderDetailsModel

@{
    ViewBag.Title = "Details";
}



<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Bekleniliyor)
                     {
                        <span class="badge text-bg-danger">Onay Bekleniliyor</span>
                     }
                     else if(Model.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Tamamlandı)
                     {
                        <span class="badge text-bg-success">Sipariş Tamamlandı</span>
                     }
                    
                </dd>
                <dt class="col-sm-3">Sipariş Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>
                <dt class="col-sm-3">Sipariş Numarası</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>
                <dt class="col-sm-3">Toplam ücret</dt>
                <dd class="col-sm-9">@Model.Total <i class="fa-solid fa-turkish-lira-sign"></i></dd>
                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.Deta</dd>



                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">

                    @Model.AdresBasliği
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu


                </dd>
                
                <dt class="col-sm-3">Ürünler</dt>
                <dd class="col-sm-9">
                    <hr />
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach(var item in Model.OrderLines)
                             {
                                <tr>
                                    <td>
                                        <img src="/Upload/@item.Image" width="70" />
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @item.Price <i class="fa-solid fa-turkish-lira-sign"></i>
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                            <i class="fa-solid fa-angles-right"></i>
                                            Ürün Detayı
                                        </a>
                                    </td>
                                </tr>
                             }

                        </tbody>

                    </table>

                </dd>
            </dl>

        </div>
    </div>
</div>