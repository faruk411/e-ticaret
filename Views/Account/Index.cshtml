@model IEnumerable<e_ticaret_MVC.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Total</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                     {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.Deta.ToShortDateString()</td>
                            <td>@item.Total <i class="fa-solid fa-turkish-lira-sign"></i></td>
                            <td>
                                @if (item.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Bekleniliyor)
                                {
                                    <span class="badge text-bg-danger">Onay Bekleniliyor</span>
                                }
                                else if (item.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Tamamlandı)
                                {
                                    <span class="badge text-bg-success">Sipariş Tamamlandı</span>
                                }

                            </td>
                            <td>
                                @Html.ActionLink("Ürün Detayı", "Details", new { id = @item.Id }, new {@class="btn btn-primary btn-sm"})
                            </td>
                        </tr>

                     }

                </tbody>
            </table>

        </div>
    </div>
</div>

