@model IEnumerable<e_ticaret_MVC.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2>Siparişler</h2>
    <hr />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sipariş Numarası</th>
                <th>Sipariş Tarihi</th>
                <th>Sipariş Durmu</th>
                <th>Total</th>
                <th>Ürün Sayısı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.Deta</td>
                    <td>
                        @if (item.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Bekleniliyor)
                        {
                            <span class="badge text-bg-danger">Onay Bekleniliyor</span>
                        }
                        else if (item.OrderState == e_ticaret_MVC.Entity.EnumOrderState.Tamamlandı)
                        {
                            <span class="badge text-bg-success">Sipariş Tamamlandı</span>
                        }
                        

                    </td>
                    <td>@item.Total <i class="fa-solid fa-turkish-lira-sign"></td>
                    <td>@item.Count</td>
                    <td>
                        @Html.ActionLink("Ürün Detayı", "Details", new { id = @item.Id }, new {@class="btn btn-primary btn-sm"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

